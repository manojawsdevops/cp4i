apiVersion: v1
kind: Pod
metadata:
  name: ace 
  labels:
    app: nginx
spec:       
   containers:
     - name: configmap-container
       image: manojreddyeidiko/configmap:latest
       env:
       - name: LICENSE
         value: accept
       - name: ACE_SERVER_NAME
         value: ACESERVER
       command: [ "/bin/bash", "-ce", "tail -f /dev/null" ]
       volumeMounts:
       - name: serverconf
         mountPath: /home/aceuser/ace-server/server.conf.yaml
         volumeMounts:
       - name: odbcini
         mountPath: /home/aceuser/initial-config/odbcini/odbc.ini
         volumeMounts:
       - name: truststore
         mountPath: /home/aceuser/initial-config/truststore.jks
         volumeMounts:
       - name: keystore
         mountPath: /home/aceuser/initial-config/keystore.jks
         volumeMounts:
       - name: setdbparms
         mountPath: /home/aceuser/initial-config/setdbparms.txt

   volumes: 
     - name: serverconf
       configMap:
         name: serverconf        
     - name: odbcini
       configMap:
         name: odbcini
     - name: truststore
       configMap:
          name: truststore
     - name: keystore
       configMap:
         name: keystore  
     - name: setdbparms
       secrets: 
         name: setdbparms   
   restartPolicy: Never
